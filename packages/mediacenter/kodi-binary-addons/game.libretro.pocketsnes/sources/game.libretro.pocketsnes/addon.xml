<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.pocketsnes"
		name="SNES (Pocketsnes)"
		version="1.39.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.snes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.pocketsnes.so"
                   library_linux="game.libretro.pocketsnes.so"
                   library_osx="game.libretro.pocketsnes.dylib"
                   library_windx="game.libretro.pocketsnes.dll"
                   library_wingl="game.libretro.pocketsnes.dll">
		<platforms>SNES</platforms>
		<extensions>smc|fig|sfc|gd3|gd7|dx2|bsx|swc</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Pocketsnes v1.39</summary>
		<description>Port of Snes9x 1.39 for libretro. Heavily optimized for ARM.

Supported files: smc, fig, sfc, gd3, gd7, dx2, bsx, swc

		</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
