echo "getting sources..."
  if [ ! -d kodi-game-controllers.git ]; then
    git clone --depth=1 https://github.com/kodi-game/kodi-game-controllers.git kodi-game-controllers.git
  fi

  cd kodi-game-controllers.git
    git pull
    GIT_REV=`git log -n1 --format=%h`
  cd ..

echo "copying sources..."
  rm -rf kodi-game-controllers-$GIT_REV
  cp -R kodi-game-controllers.git kodi-game-controllers-$GIT_REV

echo "cleaning sources..."
  rm -rf kodi-game-controllers-$GIT_REV/.git

echo "packing sources..."
  tar cvJf kodi-game-controllers-$GIT_REV.tar.xz kodi-game-controllers-$GIT_REV

echo "remove temporary sourcedir..."
  rm -rf kodi-game-controllers-$GIT_REV
